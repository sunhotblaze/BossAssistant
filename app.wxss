/**app.wxss**/

.body{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F5F5F5;
}

.content-view{
 height :auto;
}
.container-top{
  margin-top: 26%;
}
.container-change-top{
  margin-top: 35%;
}

.selector{
  padding: 35rpx;
  background: #fff;
  font-family:sans-serif;
  font-size: 28rpx;
  border-bottom: 1rpx solid #DCDCDC;
}

.date-selector{
  height:60rpx; 
  padding-top:30rpx;
  display: flex;
}
/**定制时间选择器**/
.custom-date-selector{
  padding-top: 30rpx;
  height: 40rpx;
  display: flex;
}
/**隐藏**/
.hide{
  display: none;
}

.top{
  position:fixed; 
  top:0;
}

.icon-right{
  float: right;
}

.selector-icon{
  width: 38rpx;
  height: 38rpx;
}

.item{
  flex: 1;
  float:left;
  text-align: center;
}

.item.active{
  border-bottom: 5rpx solid #1296db;
  color: #1296db;
}

.icon-left{
  float: left;
}

.title-icon{
  width: 48rpx;
  height: 48rpx;
  margin-top: -9rpx;
}

.container{
 width: 95%;
}

.block{
  margin-top:20rpx;
  padding: 15rpx;
  background:white;
  border:1rpx solid #DCDCDC;
  border-radius: 20rpx;
  font-size: 25rpx;
  color: #696969;
  font-family:sans-serif;
}
.block-title{
  padding-top: 10rpx;
  padding-bottom: 10rpx
}

.block-border-bottom{
  border-bottom: 0.5rpx solid #DCDCDC;
}

.block-title-lable{
  font-size: 30rpx;
  color: #1296db;
  margin-left: 15rpx;
}

.table{
  width: 100%;
}
.tr{
  width: 100% ;
  display: flex;
}
.th,.td {
  padding: 20rpx;
  text-align: center;
  width: 100%;
}
.th {
  font-weight: 400;
}
